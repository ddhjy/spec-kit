// 格式说明参见 https://aka.ms/devcontainer.json。配置选项参见：
// https://github.com/devcontainers/templates/tree/main/src/python 的 README
{
	"name": "SpecKitDevContainer",
	// 也可以使用 Dockerfile 或 Docker Compose 文件。更多信息：https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/python:3.13-trixie", // 基于 Debian “Trixie”(13)
	"features": {
		"ghcr.io/devcontainers/features/common-utils:2": {
			"installZsh": true,
			"installOhMyZsh": true,
			"installOhMyZshConfig": true,
			"upgradePackages": true,
			"username": "devcontainer",
			"userUid": "automatic",
			"userGid": "automatic"
		},
		"ghcr.io/devcontainers/features/dotnet:2": {
			"version": "lts"
		},
		"ghcr.io/devcontainers/features/git:1": {
			"ppa": true,
			"version": "latest"
		},
		"ghcr.io/devcontainers/features/node": {
			"version": "lts"
		}
	},

	// 使用 forwardPorts 将容器内端口转发到本地。
  "forwardPorts": [
	8080 // 用于 Spec-Kit 文档站点
  ],
  "containerUser": "devcontainer",
  "updateRemoteUserUID": true,
  "postCreateCommand": "chmod +x ./.devcontainer/post-create.sh && ./.devcontainer/post-create.sh",
  "postStartCommand": "git config --global --add safe.directory ${containerWorkspaceFolder}",
  "customizations": {
    "vscode": {
      "extensions": [
		"mhutchie.git-graph",
		"eamodio.gitlens",
		"anweber.reveal-button",
		"chrisdias.promptboost",
		// GitHub Copilot
		"GitHub.copilot",
		"GitHub.copilot-chat",
		// Codex（OpenAI）
		"openai.chatgpt",
		// Kilo Code
		"kilocode.Kilo-Code",
		// Roo Code
		"RooVeterinaryInc.roo-cline",
		// Amazon Q Developer
		"AmazonWebServices.amazon-q-vscode",
		// Claude Code
		"anthropic.claude-code"
	],
      "settings": {
		"debug.javascript.autoAttachFilter": "disabled", // 修复在集成终端中运行命令时的自动附加问题

		// GitHub Copilot 的 Specify 设置
		"git.autofetch": true,
		"chat.promptFilesRecommendations": {
			"speckit.constitution": true,
			"speckit.specify": true,
			"speckit.plan": true,
			"speckit.tasks": true,
			"speckit.implement": true
		},
		"chat.tools.terminal.autoApprove": {
			".specify/scripts/bash/": true,
			".specify/scripts/powershell/": true
		}
      }
    }
  }
}
